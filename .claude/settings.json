{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": 50000,
    "BASH_DEFAULT_TIMEOUT_MS": 60000
  },
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(go version:*)",
      "Bash(go test:*)",
      "Bash(go vet:*)",
      "Bash(go build:*)",
      "Bash(go fmt:*)",
      "Bash(go mod:*)",
      "Bash(go get:*)",
      "Bash(go list:*)",
      "Bash(go clean:*)",
      "Bash(go tool cover:*)",
      "Bash(gofmt:*)",
      "Bash(grep:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)",
      "Bash(make:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git restore:*)",
      "Bash(git log:*)",
      "Bash(gh:*)",
      "Bash(gh issue:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh api:*)",
      "Bash(gh project item-list:*)",
      "Bash(gh project list:*)",
      "Bash(gh label list:*)",
      "Bash(templ generate:*)",
      "Bash(templ fmt:*)",
      "Bash(railway:*)",
      "Bash(railway service:*)",
      "Bash(railway logs:*)",
      "Bash(railway environment:*)",
      "Bash(railway whoami:*)",
      "Bash(railway variables:*)",
      "Bash(golangci-lint run:*)",
      "Bash(mkdir -p .claude/dumps:*)",
      "Bash(docker images:*)",
      "Bash(docker inspect:*)",
      "Bash(docker logs:*)",
      "Bash(docker ps:*)",
      "Bash(docker pull:*)",
      "Bash(docker stats:*)",
      "Bash(docker system df:*)",
      "Bash(docker version:*)",
      "Read(/tmp/**)",
      "Write(.claude/dumps/**)",
      "Edit(.claude/dumps/**)",
      "WebSearch",
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:docs.anthropic.com)",
      "mcp__godoc-mcp__get_doc",
      "mcp__bloom__search_code",
      "mcp__devhub__get_logs",
      "mcp__devhub__search_logs",
      "mcp__devhub__health_check",
      "mcp__sequential-thinking__sequentialthinking",
      "mcp__github__get_pull_request_comments",
      "mcp__github__create_pull_request",
      "mcp__github__list_pull_requests",
      "mcp__github__update_pull_request",
      "mcp__github__get_pull_request_status",
      "mcp__github__get_pull_request",
      "mcp__github__get_pull_request_reviews",
      "mcp__github__list_workflows",
      "mcp__github__list_workflow_runs",
      "mcp__github__get_job_logs",
      "mcp__github__add_comment_to_pending_review",
      "mcp__github__create_pending_pull_request_review",
      "mcp__github__submit_pending_pull_request_review",
      "mcp__github__get_file_contents",
      "mcp__github__get_pull_request_files",
      "mcp__github__create_issue",
      "mcp__github__update_issue",
      "mcp__github__list_workflow_jobs",
      "mcp__github__get_pull_request_review_comments",
      "mcp__github__get_workflow_run",
      "mcp__github__get_me",
      "mcp__github__search_repositories",
      "mcp__github__search_pull_requests"
    ],
    "deny": [
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/credentials*)",
      "Bash(sudo:*)"
    ],
    "ask": [
      "Bash(rm:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "go fmt ./... && go vet ./..."
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "go fmt ./... && go vet ./..."
          }
        ]
      }
    ]
  }
}
